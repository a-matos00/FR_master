<Window x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="600" Width="400" Top="0" Left="0">

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>


        <TextBlock x:Name ="mainText" Height="100"  Grid.Row="0" Grid.Column="0" Foreground="white" Background="Crimson" Width="400" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="72" Text="FRTUNE"/>
        <Button x:Name="transmitButton" Background="DarkGray" Click="OpenTransmitWindow" Height="100" Grid.Row="1" Content="Open Transmit Window"></Button>
        <Button x:Name="monitorButton" Background="DarkGray" Click="OpenMonitorWindow" Height="100" Grid.Row="2" Content="Open Bus Monitor Window"></Button>
        <Button x:Name="dataLogSession" Background="DarkGray" Click="OpenDiagnosticWindow" Height="100" Grid.Row="3" Content="Data logging session"></Button>
        <!--<Image  Source="file:///C:/Users/andri/Pictures/frt_Logo.jpg"/> -->
    </Grid>
</Window>