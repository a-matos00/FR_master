<Window x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="600" Width="400" Top="0" Left="0">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>


        <TextBlock x:Name ="mainText" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="72" Height="96" Width="364"><Run Language="hr-hr" Text="FRTUNE"/></TextBlock>
        <Button x:Name="transmitButton" Click="OpenTransmitWindow" Height="100" Grid.Row="1">Transmit</Button>
        <Button x:Name="monitorButton" Click="OpenMonitorWindow" Height="100" Grid.Row="2">Monitor</Button>

    </Grid>
</Window>